<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.snscard.web.mapper.InformationMapper">
    <select id="queryUserInformation" resultType="com.snscard.web.pojo.User_Information">
        select u.name,u.username,u.name_us,u.tel,u.address,u.vocation,u.company,u.email,u.introduction,p.image_path as image_path from user_information u join path p on p.name=u.name where u.name=#{name};
    </select>
    <insert id="insertUserInformation" parameterType="com.snscard.web.pojo.User_Information">
        insert into user_information values (#{name},#{username},#{name_us},#{tel},#{address},#{vocation},#{company},#{email},#{introduction});
    </insert>
    <insert id="insertUserPath" parameterType="String">
        insert into path(id,name,image_path) values (#{id},#{name},#{image_path});
    </insert>
    <insert id="insertUserAnswer" parameterType="String">
        insert into user_answer(id,name, a1, a2, a3, a4, a5) values (#{id},#{name},#{a1},#{a2},#{a3},#{a4},#{a5});
    </insert>

</mapper>