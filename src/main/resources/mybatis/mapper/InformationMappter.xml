<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.snscard.web.mapper.InformationMapper">
    <select id="queryUserInformation" resultType="com.snscard.web.pojo.User_Information">
        select name,username,name_us,tel,address,vocation,company,email,introduction from user_information where name=#{name};
    </select>
    <insert id="insertUserInformation" parameterType="com.snscard.web.pojo.User_Information">
        insert into user_information(name, username, name_us, tel, address, vocation, company, email, introduction) values (#{name},#{username},#{name_us},#{tel},#{address},#{vocation},#{company},#{email},#{introduction});
    </insert>
    <update id="updateUserInformation" parameterType="com.snscard.web.pojo.User_Information">
        update user_information set name=#{name} ,username=#{username},name_us=#{name_us},tel=#{tel},address=#{address},vocation=#{vocation},company=#{company},email=#{email},introduction=#{introduction} where name=#{name}
    </update>
    <insert id="insertUserPath" parameterType="String">
        insert into path(uuid,name,image_all_name) values (#{uuid},#{name},#{image_all_name});
    </insert>
    <insert id="insertUserCropPath" parameterType="String">
        insert into crop_path(uuid,name,image_all_name) values (#{uuid},#{name},#{image_all_name});
    </insert>
    <insert id="insertUserAnswer" parameterType="String">
        insert into user_answer(uuid,name, a1, a2, a3, a4, a5) values (#{uuid},#{name},#{a1},#{a2},#{a3},#{a4},#{a5});
    </insert>
    <parameterMap id="image" type="com.snscard.web.pojo.UserImage">
        <parameter property="name" javaType="String"/>
        <parameter property="pageNum" javaType="int"/>
    </parameterMap>
    <select id="queryAllUserImage" parameterMap="image" resultType="String">
        select image_all_name from path  where name=#{name} LIMIT #{pageNum}, 10;
    </select>
    <select id="queryAllUserCropperImage" parameterMap="image" resultType="String">
        select image_all_name from crop_path where name=#{name} LIMIT #{pageNum}, 10;
    </select>
    <insert id="insertUserUrl" parameterType="String">
        insert into user_url(name,github_url,naver_url,tistory_url) values (#{name},#{github_url},#{naever_url},#{tistory_url});
    </insert>
    <insert id="insertUserUrlInfo" parameterType="String">
        insert into user_url_info(name,title,data) values(#{name},#{title},#{data});
    </insert>
</mapper>